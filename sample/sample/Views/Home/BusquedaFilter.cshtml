@model List<sample.Models.Pelicula>
@{
    ViewBag.Title = "BusquedaFilter";
    int cont = 1;
    var listAnios = (int[])ViewData["listAnios"];
}
<h4>@ViewBag.Message</h4>
<h4>@ViewBag.Anio</h4>
<h4>@ViewBag.Duracion</h4>
<h5>@ViewBag.Collection</h5>
<h5>@listAnios</h5>
<h2>BusquedaFilter</h2>


<div class="row">
    <div class="container">
        <form class="form-inline" action="/home/BusquedaFilter" method="post">
            <div class="form-group mb-2">
                <label for="duracion">Estado</label>

                <select class="form-control" id="duracion" name="duracion">
                    <option value="0">-</option>
                    @foreach (var a in ViewBag.listaDuraciones)
                    {
                        if (a == ViewBag.Duracion)
                        {
                            <option value="@a" selected>@a</option>
                        }
                        else
                        {
                            <option value="@a">@a</option>
                        }

                    }
                </select>

            </div>
            <div class="form-group mx-sm-3 mb-2">
                <label for="anio">Gestion</label>

                <select class="form-control" id="anio" name="anio">
                    <option value="0">-</option>
                    @foreach (var a in ViewBag.listaAnios)
                    {
                        if (a == ViewBag.Anio)
                        {
                            <option value="@a" selected>@a</option>
                        }
                        else
                        {
                            <option value="@a">@a</option>
                        }

                    }
                </select>
            </div>
            <button type="submit" class="btn btn-primary mb-2">Buscar</button>
        </form>
    </div>
</div>

<div class="row">
    <div class="container">

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Titulo</th>
                    <th scope="col">Duracion</th>
                    <th scope="col">Pais</th>
                    <th scope="col">Ubicacion</th>
                </tr>
            </thead>
            <tbody>


                @foreach (var peli in Model)
                {
                    <tr>
                        <td>
                            @cont
                        </td>

                        <td>@peli.titulo</td>
                        <td>@peli.duracion</td>
                        <td>@peli.publicacion.ToString("dd/MM/yyyy")</td>
                        <td>@peli.pais</td>
                        cont++;
                    </tr>
                }



            </tbody>
        </table>
    </div>
</div>
